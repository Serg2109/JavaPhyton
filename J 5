import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a character: ");
        char charVar = scanner.next().charAt(0);  // Reads the first character of the input
        System.out.println("Character entered: " + charVar);
        scanner.close();
    }
}
