def electricity_bill(units):
    if units <= 100:
        bill = units * 1
    elif units <= 200:
        bill = 100 * 1 + (units - 100) * 1.5
    elif units <= 300:
        bill = 100 * 1 + 100 * 1.5 + (units - 200) * 2
    else:
        bill = 100 * 1 + 100 * 1.5 + 100 * 2 + (units - 300) * 3
    return bill
